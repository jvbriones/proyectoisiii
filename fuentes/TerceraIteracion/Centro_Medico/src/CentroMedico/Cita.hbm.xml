<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="CentroMedico.Cita">
           
    <id name="id" column="id" >
      <generator class="assigned"/>
    </id>
     
    <property name="Fecha">
        <column name="Fecha" type="date"/>
    </property>
    <property name="Estado">
        <column name="Estado" type="string"/>
    </property>

     <property name="Tipo">
        <column name="Tipo" type="string"/>
    </property>
    <many-to-one class="CentroMedico.PersonalMedico" name="PersonalMedico" column="DNI_PERSONALMEDICO"/>
    <many-to-one class="CentroMedico.Paciente" name="Paciente" column="DNI_PACIENTE"/>
  </class>
</hibernate-mapping>
