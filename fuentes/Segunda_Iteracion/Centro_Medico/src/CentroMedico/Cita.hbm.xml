<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="CentroMedico.Cita">
    <composite-id>
      <key-property column="FECHA_CITA" name="Fecha" type="date"/>
      <key-many-to-one column="ID_PACIENTE" name="Paciente" class="CentroMedico.Paciente" lazy="true"/>
    </composite-id>

    <property name="Estado"/>
    <property name="Tipo"/>

	<one-to-one class="CentroMedico.PersonalMedico" name="PersonalMedico" constrained="true" lazy="true"/>
  </class>

</hibernate-mapping>

