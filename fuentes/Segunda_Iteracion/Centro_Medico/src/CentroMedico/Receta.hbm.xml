<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="CentroMedico.Receta">
    <id column="ID_RECETA" name="Id" type="integer">
      <generator class="native"/>
    </id>
    <property name="Instrucciones"/>
    <property name="JuicioDiagnostico"/>
    <property name="Fecha"/>
    <set cascade="all" name="MedicamentoRecetado">
      <key column="ID_MEDICAMENTORECETADO"/>
      <one-to-many class="CentroMedico.MedicamentoRecetado"/>
    </set>
    <one-to-one class="CentroMedico.Medico" constrained="true" name="Medico"/>
    <one-to-one class="CentroMedico.Paciente" constrained="true" name="Paciente"/>
  </class>
</hibernate-mapping>
