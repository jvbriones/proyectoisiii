<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="CentroMedico.MedicamentoRecetado">
        <id name="Id" column="ID_MEDICAMENTORECETADO" type="integer">
            <generator class="native" />
        </id>
        <property name="Poscologia"/>
        <property name="Duracion"/>
        <property name="FechaFin"/>
	<property name="Dispensado"/>
        
        <one-to-one class="CentroMedico.Medicamento" name="Medicamento" constrained="true" lazy="true"/>
        
  </class>
</hibernate-mapping>

