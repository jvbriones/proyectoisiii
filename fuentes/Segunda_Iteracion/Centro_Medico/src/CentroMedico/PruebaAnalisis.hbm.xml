<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="CentroMedico.PruebaAnalisis">
    <id column="ID_PRUEBAANALISIS" name="Id">
      <generator class="native"/>
    </id>
    <property name="Comentario"/>

	<one-to-one class="CentroMedico.Paciente" name="Paciente" constrained="true" lazy="true"/>

    <joined-subclass name="CentroMedico.PruebaSangre">
        <key column="ID_PRUEBASANGRE"/>

        <set cascade="all" lazy="true" name="ResultadosSangre">
          <key column="ID_PRUEBAANALISIS"/>
          <one-to-many class="CentroMedico.AtributoSangre"/>
        </set>
	</joined-subclass>
    <joined-subclass name="CentroMedico.PruebaOrina">
        <key column="ID_PRUEBAORINA"/>

        <set cascade="all" lazy="true" name="ResultadosOrina">
          <key column="ID_PRUEBAANALISIS"/>
          <one-to-many class="CentroMedico.AtributoOrina"/>
        </set>
	</joined-subclass>
  </class>
</hibernate-mapping>

