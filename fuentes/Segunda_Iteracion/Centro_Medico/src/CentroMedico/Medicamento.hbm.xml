<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="CentroMedico.Medicamento">
        <id name="Nombre" column="NOMBRE_MEDICAMENTO" type="string">
            <generator class="assigned" />
        </id>
        <property name="Descripcion"/>
        <property name="ExistenciaMinimas"/>
        <property name="StockActual"/>

	<set cascade="all" lazy="true" name="LotesMedicamento">
          <key column="ID_LOTEMEDICAMENTO"/>
          <one-to-many class="CentroMedico.LoteMedicamento"/>
        </set>     
  </class>
</hibernate-mapping>

