<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="CentroMedico.Usuario">
    <id column="DNI_USUARIO" name="DNI">
      <generator class="assigned"/>
    </id>
    <discriminator column="discriminator_col" type="string"/>
    <property name="Nombre"/>
    <property name="Apellidos"/>
    <property name="Direccion"/>
    <property name="Email"/>
    <property name="Contrasenia"/>
    <property name="Telefono"/>
    <property name="FecNac"/>
    <property name="LugarNac"/>
    <property name="Foto"/>
    <property name="Tipo"/>
    <joined-subclass name="CentroMedico.Paciente">
      <key column="DNI_PACIENTE"/>
    </joined-subclass>
    <joined-subclass name="CentroMedico.Administrativo">
      <key column="DNI_ADMINISTRATIVO"/>
    </joined-subclass>
    <joined-subclass name="CentroMedico.Farmaceutico">
      <key column="DNI_FARMACEUTICO"/>
    </joined-subclass>
    <joined-subclass name="CentroMedico.PersonalMedico">
      <key column="DNI_PERSONALMEDICO"/>
    </joined-subclass>
  </class>


  <subclass name="CentroMedico.Radiologo" extends="CentroMedico.PersonalMedico" discriminator-value="DNI" lazy="false">
  </subclass>
  <subclass name="CentroMedico.Analista" extends="CentroMedico.PersonalMedico" discriminator-value="DNI" lazy="false">
  </subclass>
  <subclass name="CentroMedico.Medico" extends="CentroMedico.PersonalMedico" discriminator-value="DNI" lazy="false">
  </subclass>

  </hibernate-mapping>